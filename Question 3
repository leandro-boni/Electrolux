
#include <stdio.h>
#include <stdlib.h>

typedef struct {
	int Max=0, int Min=0, int Sum=0, int evensize, int Even[];
	float Average;
}Mystruct

My struct Function(int Array[], int Size) {
	Mystruct m2;
	for (int i = 0; i < Size; i++ {
		m2.Sum += Array[i];
		if (Array[i] % 2 == 0){
        		m2.Even[i] = Array[i];
            		m2.evensize ++;
        	}
		if (Array[i] > m2.Max)
			m2.Max = Array[i];
		else if (Array[i] < m2.Min)
			m2.Min = Array[i];
	}
	m2.Average = m2.Sum / Size;
	return m2;
}
